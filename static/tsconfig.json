{
    "compilerOptions": {
        "watch": true,
        "jsx": "react",
        "target": "ES3",
        "module": "amd",
        "pretty": false,
        "charset": "utf8",
        "locale": "ru_RU",
        "sourceMap": false,
        "outFile": "main.js",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true
    }
}